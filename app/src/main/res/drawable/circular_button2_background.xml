<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#020202" /> <!-- Change the color as per your design -->
            <corners

                android:radius="20dp"
                /> <!-- Adjust the radius as per your design -->
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/custom_button_color" />

            <gradient
                android:startColor="#4F3A6C"
                android:gradientRadius="500dp"
                android:centerX="50%"
                android:centerY="50%"
                android:type="linear"
                android:endColor="#530A78"/>


            <corners
                android:radius="20dp" /> <!-- Adjust the radius as per your design -->
        </shape>
    </item>
</layer-list>