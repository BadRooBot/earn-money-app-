<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- Change the color as per your design -->
            <corners

                android:radius="20dp"
              /> <!-- Adjust the radius as per your design -->
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">

            <gradient
                android:startColor="#d24361"

                android:endColor="#9a4074"
                android:angle="90" />

            <corners
                android:radius="20dp" /> <!-- Adjust the radius as per your design -->
        </shape>
    </item>
</layer-list>